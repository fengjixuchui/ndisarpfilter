[Version]
; --------------------------------------------------------------------------------
Signature = "$Windows NT$"
Class = Net
ClassGUID = {4d36e972-e325-11ce-bfc1-08002be10318}
Provider = %LiamKirton%
DriverVer = 07/03/2007,0.1.1.0

; --------------------------------------------------------------------------------
[ControlFlags]
; --------------------------------------------------------------------------------

ExcludeFromSelect = NdisArpFilterMiniport

; --------------------------------------------------------------------------------
[DestinationDirs]
; --------------------------------------------------------------------------------

DefaultDestDir=12

; --------------------------------------------------------------------------------
[Manufacturer]
; --------------------------------------------------------------------------------

%LiamKirton% = LiamKirton

; --------------------------------------------------------------------------------
[LiamKirton]
; --------------------------------------------------------------------------------

%NdisArpFilterMiniport_Desc% = NdisArpFilterMiniport.ndi, NdisArpFilterMiniport

; --------------------------------------------------------------------------------
[NdisArpFilterMiniport.ndi]
; --------------------------------------------------------------------------------

AddReg = NdisArpFilterMiniport.ndi.AddReg
Characteristics = 0x29 ; NCF_NOT_USER_REMOVABLE | NCF_VIRTUAL | NCF_HIDDEN

; --------------------------------------------------------------------------------
[NdisArpFilterMiniport.ndi.AddReg]
; --------------------------------------------------------------------------------

HKR, Ndi, Service, 0, NdisArpFilterMiniport

; --------------------------------------------------------------------------------
[NdisArpFilterMiniport.ndi.Services]
; --------------------------------------------------------------------------------

AddService = NdisArpFilterMiniport, 0x2, NdisArpFilterMiniport.AddService

; --------------------------------------------------------------------------------
[NdisArpFilterMiniport.AddService]
; --------------------------------------------------------------------------------

ServiceType = 1 ; SERVICE_KERNEL_DRIVER
StartType = 3 ; SERVICE_DEMAND_START
ErrorControl = 1 ;SERVICE_ERROR_NORMAL
ServiceBinary = %12%\NdisArpFilter.sys
AddReg = NdisArpFilterMiniport.AddService.AddReg

; --------------------------------------------------------------------------------
[NdisArpFilterMiniport.AddService.AddReg]
; --------------------------------------------------------------------------------

; --------------------------------------------------------------------------------
[Strings]
; --------------------------------------------------------------------------------

LiamKirton = "Liam Kirton"
NdisArpFilterMiniport_Desc = "NdisArpFilter Miniport"

